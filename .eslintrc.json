{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "plugins": ["import"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "import/group-exports": "error",
    "import/no-unresolved": ["error", { "commonjs": true }],

    "eqeqeq": [
      "error",
      "always",
      {
        "null": "never"
      }
    ]
  }
}
